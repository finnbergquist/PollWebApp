
<h1 style="border:orange; border-width:5px; border-style:solid;"> Polls</h1>

<!--<p><%= image_tag 'art.jpg' %></p>-->
<p><%= image_tag "zebras.jpg", :size => "325x200", :style => "border: 3px solid black; float :right" %> </p>
<p> <%= image_tag "goats.jpg", :size => "325x200", :style => "border: 3px solid black; float :right" %> </p>
<p> <%= image_tag "geese.jpg", :size => "325x200", :style => "border: 3px solid black; float :right" %> </p>









<%= form_tag do%>
    <p> Name: <%= text_field_tag(:n)%> </p>
    <p> Question 1: <%= text_field_tag(:q1)%> </p>
    <p> Question 2: <%= text_field_tag(:q2)%> </p>
    <p> Question 3: <%= text_field_tag(:q3)%> </p>
    
    <p><%= submit_tag "Submit Answers"%></p>
<%end %>

<table>
    <tbody>
        <th> Particpants </th>
        <% @allAnswers.each do |answer| %>
            <tr> 
                <td> <%=answer.name%>  </td>
            </tr>
        <%end%>
    </tbody>
</table>

<h2> Results </h2>
<section> <%= pie_chart Answer.group(:q1answer).count, title: "Question 1" %> </section>
<%= pie_chart Answer.group(:q2answer).count, title: "Question 2" %>
<%= pie_chart Answer.group(:q3answer).count, title: "Question 3" %>



